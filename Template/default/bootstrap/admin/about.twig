{% if usage == 'framework' %}
  {% set template_namespace = '@phpManufaktur/Basic/Template' %}
  {% set template_file = 'framework/body.twig' %}  
{% else %}
  {% set template_namespace = '@phpManufaktur/Contact/Template' %}
  {% set template_file = 'bootstrap/admin/body.twig' %}
{% endif %}
{% extends getTemplateFile(template_namespace, template_file) %}
{% block stylesheet %}
  {{ parent() }}
  {# add the CSS file for Contact #}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Contact/Template/default/bootstrap/css/admin.min.css" media="screen, projection" />
{% endblock stylesheet %}
{% block title %}{{ 'Contact Administration - About'|trans }}{% endblock %}
  
{% block content %}
  <div class="container">
    {% include '@phpManufaktur/Contact/Template/default/bootstrap/admin/toolbar.twig' %}
    {# use the standard 'about' dialog from BASIC #}
    {% include '@phpManufaktur/Basic/Template/default/pattern/bootstrap/about.twig' %}
  </div>
{% endblock content %}