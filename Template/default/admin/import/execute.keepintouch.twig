{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'framework/body.twig') %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Contact/Template/default/css/admin.min.css" media="screen, projection" />
{% endblock %}

{% block content %}
  <!-- {{ _self.getTemplateName() }} -->
  <div class="container">
    <div class="panel panel-primary">
      <div class="panel-heading">{{ 'Import contacts from KeepInTouch (KIT)'|trans }}</div>
      <div class="panel-body">

        {{ alert }}

        {% if app.translator.locale == 'de' %}
          {# german translation #}
          <p>Es existieren <b>{{ contacts.detected }}</b> KeepInTouch Datensätze, die in kitFramework <i>Contact</i> importiert werden können.</p>
          <p>Tatsächlich wurden <b>{{ contacts.imported }}</b> Datensätze importiert. Hierbei wurden alle Datensätze übersprungen, die bereits in <i>Contact</i> existieren.</p>
        {% else %}
          {# english translation #}
          <p>Detected <b>{{ contacts.detected }}</b> KeepInTouch contact records which can imported to kitFramework <i>Contact</i>.</p>
          <p>Really imported where <b>{{ contacts.imported }}</b>. Skipped records which are already exists.</p>
        {% endif %}
      </div>
    </div>
  </div>  
{% endblock content %}
