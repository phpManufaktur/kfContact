{% extends template_file('@framework', 'body.twig') %}
{% block stylesheet %}
	{{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Contact/Template/default/css/simple.contact.css" media="screen, projection" />
{% endblock %}

{% block content %}
  {% if message|length > 0 %}
    <div class="message">{{ message }}</div>
  {% endif %}
  <div class="address_form">
    <form action="{{ FRAMEWORK_URL }}/admin/contact/simple/contact" method="post">
      {{ form_widget(form) }}
      <div>
        <label for="submit">&nbsp;</label>
        <input type="submit" name="submit" />
      </div>
      <div class="clear"></div>  
    </form>
  </div>
{% endblock content %}