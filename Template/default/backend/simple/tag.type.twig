{% extends template_file('@framework', 'body.twig') %}
{% block stylesheet %}
	{{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Contact/Template/default/backend/simple/css/contact.css" media="screen, projection" />
{% endblock %}

{% block content %}
  <h1>{{ 'Create or edit a Tag'|trans }}</h1>
  {% if message|length > 0 %}
    <div class="message">{{ message }}</div>
  {% endif %}
  <div class="contact_form">
    <form action="{{ FRAMEWORK_URL }}/admin/contact/simple/tag/type" method="post">
      {{ form_widget(form) }}
      {% if tag_type_id > 0 %}
      <div class="clear"></div>
      <div>
        <label for="submit">&nbsp;</label>
        <input type="checkbox" name="delete" value="1" />&nbsp;{{ 'delete this #tag'|trans }}
      </div>
      {% endif %}
      <div class="clear"></div>
      <div>
        <label for="submit">&nbsp;</label>
        <input type="submit" name="submit" />
      </div>
      <div class="clear"></div>  
    </form>
  </div>
{% endblock content %}