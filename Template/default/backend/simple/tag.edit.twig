{% extends template_file('@framework', 'body.twig') %}
{% block stylesheet %}
	{{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Contact/Template/default/backend/simple/css/contact.css" media="screen, projection" />
{% endblock %}

{% block content %}
  {% if form.vars.value.tag_type_id < 1 %}
    <h1>{{ 'Create a new Tag <i>#tag</i>'|trans }}</h1>
  {% else %}
    <h1>{{ 'Edit the <i>#tag</i> %tag_name%'|trans({'%tag_name%':form.vars.value.tag_name}) }}</h1>
  {% endif %}
  {% if message|length > 0 %}
    <div class="message">{{ message }}</div>
  {% endif %}
    
  {% include '@phpManufaktur/Contact/Template/default/backend/form/tag.edit.twig' %}
    
{% endblock content %}